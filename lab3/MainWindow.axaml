    <StackPanel>
<Grid ColumnDefinitions="70, 70, 70, 70, 70, 70, 70" RowDefinitions="70, 70, 70, 70, 70, 70" Margin="10">
	<Border Grid.ColumnSpan="6" BorderThickness="3" BorderBrush="Blue">
		<TextBlock Name="displayTextBlock" Text="{Binding CurrentInput, Mode=OneWay}" FontSize="30" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top"></TextBlock>
	</Border>
	
			<Button Grid.Column="0" Grid.Row="1" Content="n!" Command="{Binding HandleFactorialFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="1" Grid.Row="1" Content="mod" Command="{Binding HandleModFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="2" Grid.Row="1" Content="floor" Command="{Binding HandleFloorFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="3" Grid.Row="1" Content="ceil" Command="{Binding HandleCeilFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="4" Grid.Row="1" Content="Bs" Command="{Binding HandleBackspaceInput}" Background="Khaki" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="5" Grid.Row="1" Content="Clear" Command="{Binding HandleClearInput}" Background="Khaki" Width="70" Height="70" Margin="5" />

			<Button Grid.Column="0" Grid.Row="2" Content="7" Command="{Binding HandleNumberInput}"  CommandParameter="7" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="1" Grid.Row="2" Content="8" Command="{Binding HandleNumberInput}"  CommandParameter="8" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="2" Grid.Row="2" Content="9" Command="{Binding HandleNumberInput}"  CommandParameter="9" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="3" Grid.Row="2" Content="+" Command="{Binding HandleOperatorInput}"  CommandParameter="+" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="4" Grid.Row="2" Content="-" Command="{Binding HandleOperatorInput}" CommandParameter="-"  Width="70" Height="70" Margin="5" />
			<Button Grid.Column="5" Grid.Row="2" Content="*" Command="{Binding HandleOperatorInput}" CommandParameter="*"  Width="70" Height="70" Margin="5" />
	
			<Button Grid.Column="0" Grid.Row="3" Content="4" Command="{Binding HandleNumberInput}"  CommandParameter="4" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="1" Grid.Row="3" Content="5" Command="{Binding HandleNumberInput}"  CommandParameter="5" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="2" Grid.Row="3" Content="6" Command="{Binding HandleNumberInput}"  CommandParameter="6" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="3" Grid.Row="3" Content="sin" Command="{Binding HandleSinFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="4" Grid.Row="3" Content="cos" Command="{Binding HandleCosFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="5" Grid.Row="3" Content="tan" Command="{Binding HandleTanFunction}" Width="70" Height="70" Margin="5" />
		
			<Button Grid.Column="0" Grid.Row="4" Content="1" Command="{Binding HandleNumberInput}"  CommandParameter="1" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="1" Grid.Row="4" Content="2" Command="{Binding HandleNumberInput}"  CommandParameter="2" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="2" Grid.Row="4" Content="3" Command="{Binding HandleNumberInput}"  CommandParameter="3" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="3" Grid.Row="4" Content="x^y" Command="{Binding HandlePowerFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="4" Grid.Row="4" Content="lg" Command="{Binding HandleLogFunction}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="5" Grid.Row="4" Content="ln" Command="{Binding HandleLnFunction}" Width="70" Height="70" Margin="5" />
		
			
			<Button Grid.Column="0" Grid.Row="5" Content="0" Command="{Binding HandleNumberInput}" Width="150" Height="70" Margin="5" />
			<Button Grid.Column="2" Grid.Row="5" Content="," Command="{Binding HandleCommaInput}" Width="70" Height="70" Margin="5" />
			<Button Grid.Column="3" Grid.Row="5" Content="/" Command="{Binding HandleOperatorInput}" CommandParameter="/"  Width="70" Height="70" Margin="5" />
			<Button Grid.Column="4" Grid.Row="5" Content="=" Command="{Binding HandleEqualsInput}" Background="Khaki" Width="150" Height="70" Margin="5" />
	
</Grid>
